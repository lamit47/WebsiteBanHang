@model GearBatOn.Models.AspNetUser

@{
    ViewBag.Title = "Phân quyền";
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}

<h2>Phân quyền</h2>
@Html.Raw(ViewBag.Role)

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Sửa quyền</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="input-group">
            <label class="col-sm-2 col-form-label">Danh sách quyền</label>
            <div class="col-sm-10">
                @Html.DropDownList("role", new SelectList(Model.ListRoles, "Name", "Name"), htmlAttributes: new { @class = "form-select" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-warning" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay trở lại danh sách", "Index", routeValues: null, htmlAttributes: new { @class = "btn btn-primary", type = "button" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
