@model GearBatOn.Models.Image

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}

<h2>Thêm hình ảnh</h2>


@using (Html.BeginForm("Add", "Image", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Hình ảnh</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ProductId)
        <div class="input-group">
            <label class="col-sm-2 col-form-label">Thêm hình ảnh</label>
            <div class="col-sm-10">
                <input class="form-control" type="file" name="ImageFile" required />
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" value="Thêm" class="btn btn-warning" />
            </div>
        </div>
    </div>
}

<br />
<div>
    @Html.ActionLink("Quay trở lại danh sách", "Index", new { id = Model.ProductId }, htmlAttributes: new { @class = "btn btn-primary", type = "button" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
