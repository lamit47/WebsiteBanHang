@model GearBatOn.Models.Product

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Product</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Status)
        <div class="input-group">
            <label class="col-sm-2 col-form-label">Tên sản phẩm</label>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="input-group">
            <label class="col-sm-2 col-form-label">Danh mục</label>
            <div class="col-sm-10">
                @Html.DropDownList("CategoryId", new SelectList(Model.ListCategory, "Id", "Name"), htmlAttributes: new { @class = "form-select" })
                @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="input-group">
            <label class="col-sm-2 col-form-label">Nước sản xuất</label>
            <div class="col-sm-10">
                @Html.DropDownList("CountryId", new SelectList(Model.ListCountry, "Id", "Name"), htmlAttributes: new { @class = "form-select" })
                @Html.ValidationMessageFor(model => model.CountryId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="input-group">
            <label class="col-sm-2 col-form-label">Hãng</label>
            <div class="col-sm-10">
                @Html.DropDownList("BrandId", new SelectList(Model.ListBrand, "Id", "Name"), htmlAttributes: new { @class = "form-select" })
                @Html.ValidationMessageFor(model => model.BrandId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="input-group">
            <label class="col-sm-2 col-form-label">Giá</label>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="input-group">
            <label class="col-sm-2 col-form-label">Thời gian bảo hành</label>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.WarrantyPeriod, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.WarrantyPeriod, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="input-group">
            <label class="col-sm-2 col-form-label">Tồn kho</label>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.InventoryAmount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.InventoryAmount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="input-group">
            @Html.LabelFor(model => model.ImagePath, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.EditorFor(model => model.ImagePath, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ImagePath, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="input-group">
            <label class="col-sm-2 col-form-label">Mô tả</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(model => model.Description, 20, 40, htmlAttributes: new { style = "width: 100%; max-width: 100%;", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="input-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" value="Create" class="btn btn-warning" />
            </div>
        </div>
    </div>
}

<br />
<div>
    @Html.ActionLink("Back to List", "Index", routeValues: null, htmlAttributes: new { @class = "btn btn-primary", type = "button" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
