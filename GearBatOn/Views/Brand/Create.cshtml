@model GearBatOn.Models.Brand

@{
    ViewBag.Title = "Tạo hãng";
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}

<h2>Tạo hãng</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Hãng</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="input-group">
            <label class="col-sm-2 col-form-label">Tên hãng</label>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="input-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" value="Tạo" class="btn btn-warning" />
            </div>
        </div>
    </div>
}
<br />
<div>
    @Html.ActionLink("Quay trở lại danh sách", "Index", routeValues: null, htmlAttributes: new { @class = "btn btn-primary", type = "button" })
</div>
