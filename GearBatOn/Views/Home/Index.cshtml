    <nav class="navbar navbar-light bg-danger navbar-title text-light">
        <h2>Bàn phím - Miễn phí giao hàng toàn quốc</h2>
        <a href="/Home/ListProduct/3" class="float-right btn btn-outline-light">Xem tất cả</a>
    </nav>
    @*item*@
