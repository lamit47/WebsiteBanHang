<div style="height: 1rem"></div>
<div id="list-laptop" class="row g-3 card-group align-items-center">
    <nav class="navbar navbar-light bg-danger navbar-title text-light">
        <h2>Laptop - Miễn phí giao hàng toàn quốc</h2>
        <a href="/Home/ListProduct/1" class="float-right btn btn-outline-light">Xem tất cả</a>
    </nav>
    @*item*@
