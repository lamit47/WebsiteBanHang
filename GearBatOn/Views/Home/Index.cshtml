@section scripts
{
    <script>
        getProductByCategory("list-pc", 2);
        getProductByCategory("list-laptop", 1);
        getProductByCategory("list-monitor", 4);
        getProductByCategory("list-cpu", 3);
        function addClassByClick(button) {
            $(button).addClass("active")
        }
        function showCategory(id) {
            $(".gearbaton-category").hide();
            $(".gearbaton-category").removeClass("list-group-item");
            $(".list-group-item-action").removeClass("active");
            $("#" + id).show();
            $("#" + id).addClass("list-group-item");
        }
        function getProductByCategory(name, categoryId) {
            $.ajax({
                url: "/Home/PartialHomeProduct",
                type: "GET",
                data: { id: categoryId },
                success: function (data) {
                    $("#" + name).append(data);
                },
                error: function (xhr, status, error) {
                    alert(xhr.responseText);
                }
            });
        }
    </script>
}