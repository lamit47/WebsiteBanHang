    <nav class="navbar navbar-light bg-danger navbar-title text-light">
        <h2>Màn hình - Miễn phí giao hàng toàn quốc</h2>
        <a href="/Home/ListProduct/4" class="float-right btn btn-outline-light">Xem tất cả</a>
    </nav>
    @*item*@
</div>
<div style="height: 1rem"></div>
