@model IEnumerable<GearBatOn.Models.Product>


<div class="row row-cols-1 row-cols-md-5 g-2">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card text-dark bg-light">
                <img src="@Url.Content(item.FeatureImage ?? "~/Images/empty-image.png")" class="card-img-top">
                <div class="card-body">
                    <h6 class="card-title">
                        @Html.ActionLink(item.Name, "Product", "Home", new { id = item.Id }, htmlAttributes: new { @class = "stretched-link text-dark", @style = "text-decoration: none;" })
                    </h6>
                    <p class="card-text text-danger">@Html.DisplayFor(modelItem => item.Price)₫</p>
                    
                </div>
            </div>
        </div>
    }
</div>
