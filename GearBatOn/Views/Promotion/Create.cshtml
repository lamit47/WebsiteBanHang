@model GearBatOn.Models.Promotion

@{
    ViewBag.Title = "Tạo khuyến mãi";
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}

<h2>Tạo khuyến mãi</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Khuyến mãi</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Status)
        <div class="input-group">
            <label class="col-sm-2 col-form-label">Tên khuyến mãi</label>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="input-group">
            <label class="col-sm-2 col-form-label">Mã khuyến mãi</label>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.PromoCode, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PromoCode, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="input-group">
            <label class="col-sm-2 col-form-label">Tỷ lệ</label>
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Ratio, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ratio, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="input-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" value="Tạo" class="btn btn-warning" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay trở lại danh sách", "Index", routeValues: null, htmlAttributes: new { @class = "btn btn-primary", type = "button" })
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
