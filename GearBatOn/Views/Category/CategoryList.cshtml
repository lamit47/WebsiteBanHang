@model IEnumerable<GearBatOn.Models.Category>

@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chỉnh sửa danh mục sản phẩm</h2>

<p class="btn btn-light" >
    @Html.ActionLink("Thêm danh mục", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.Id }, new { @class = "btn btn-dark" })   
            @Html.ActionLink("Xóa danh mục", "Delete", new { id=item.Id } ,new { onclick= "return confirm('Are you sure you want to Delete?');" , @class="btn btn-dark"})
        </td>
    </tr>
}

</table>

